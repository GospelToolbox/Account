<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-xs-12">

      <img src="/img/NameLogoLongWhite.png" style="width: 100%; padding: 50px;">
      <div class="card">

        <div class="card-body">
          <h2>Log in</h2>

          <div class="row my-3 d-flex justify-content-center">
            <!--Facebook-->
            <a class="btn btn-facebook btn-rounded mr-md-3 z-depth-1a" href="<%=url_for omniauth_authorize_path(resource_name, :facebook) %>">
              <i class="fa fa-facebook text-center"></i>
            </a>
            <!--Twitter-->
            <a class="btn btn-twitter btn-rounded mr-md-3 z-depth-1a" href="<%=url_for omniauth_authorize_path(resource_name, :twitter) %>">
              <i class="fa fa-twitter text-center"></i>
            </a>
            <!--Google +-->
            <a class="btn btn-google btn-rounded z-depth-1a" href="<%=url_for omniauth_authorize_path(resource_name, :google_oauth2) %>">
              <i class="fa fa-google-plus"></i>
            </a>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="md-form">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                <%= f.label :email %>
            </div>

            <div class="md-form">

              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                <%= f.label :password %>

            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.submit "Log in", class: 'btn btn-primary' %>
                  <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>

              </div>

              <% end -%>

                <div class="actions">

                </div>
                <% end %>

                  <hr>
                  <p>
                    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                      <br> I need to
                      <%= link_to "Sign Up", new_registration_path(resource_name) %>
                  </p>
        </div>
      </div>
    </div>
  </div>
</div>